doi = {10.1063/1.1965166},
file = {:D$\backslash$:/IIT Bombay - Miscellaneous/Research Papers/Dual Degree Programme/A dynamic model for the Lagrangian-averaged Navier-Stokes-�� equations.pdf:pdf},
